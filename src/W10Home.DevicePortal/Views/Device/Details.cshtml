<div>
    <h4>DeviceStatus</h4>
    <hr />
    <table class="table">
        <tr>
            <th>Channel</th>
            <th>ChannelType</th>
            <th>Value</th>
            <th>Last Change</th>
        </tr>
        
        @foreach (var item in Model.StatusList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.channelkey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.channeltype)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.channelvalue)
                </td>
                <td>
                    @DateTime.Parse(Html.DisplayFor(modelItem => item.localtimestamp).ToString()).ToLocalTime().ToString()
                </td>
            </tr>
        }

    </table>
