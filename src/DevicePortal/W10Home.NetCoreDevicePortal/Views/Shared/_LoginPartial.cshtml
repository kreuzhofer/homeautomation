@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello @User.Identity.Name! <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a asp-area="" asp-controller="Session" asp-action="EditProfile">Edit Profile</a></li>
                <li><a asp-area="" asp-controller="Session" asp-action="Claims">Show Claims</a></li>
            </ul>
        </li>

        <li><a asp-area="" asp-controller="Session" asp-action="SignOut">Sign out</a></li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Session" asp-action="SignIn">Sign in</a></li>
    </ul>
}
